@model Book

<h5 class="add-cat">Add Book</h5>
<a  asp-controller="Categories" asp-action="Index" class="back">Back to Home</a>
<form asp-action="Create">
     <div class="form-group">
        <label asp-for="ISBN"></label>
        <input asp-for="ISBN" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Select category</label>
        <select asp-for="CategoryId" class="form-control" required>
            @foreach (var category in ViewBag.Category)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
      <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control" required />
    </div>
    <button type="submit" class="btn submit">Save</button>
</form>
