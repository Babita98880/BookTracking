@model List<Category>

<h5>Category List</h5>
  <a class="btn addBtn" asp-area="" asp-controller="Categories" asp-action="Create">Add Category</a>
                 @* <button class="addBtn" asp-area="" asp-controller="Categories" asp-action="Create">Add New Category</button> *@
             
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Description</th>
              <th>Action</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                 <td>@if (category.CategoryType != null)
                {
                    @category.CategoryType.Name
                }</td> 
                <td>@category.Description</td>
                 <td>
                    <a asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-delete btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
